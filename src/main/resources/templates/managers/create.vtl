<p class="pageHeader">New Manager</p>

<form action="/managers" method="post">
<label for="firstName">First Name:</label>
<input id="firstName" class="inputbox" placeholder="First Name" type="text" name="firstName" required/>

<label for="lastName">Last Name:</label>
<input id="lastName" class="inputbox" placeholder="Last Name" type="text" name="lastName" required/>

<label for="department">Department:</label>
<select id="department" name="department">
    #foreach($department in $departments)
    <option value="$department.getId()">$department.getTitle()</option>
    #end
</select>

<label for="salary">Salary(Â£):</label>
<input id="salary" class="inputbox" placeholder="Salary" type="text" name="salary" required/>

<label for="budget">Budget(Â£):</label>
<input id="budget" class="inputbox" placeholder="Budget" type="text" name="budget" required/>

<input type="submit" value="Save" class="button"/>

</form>